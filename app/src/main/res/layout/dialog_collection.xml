<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:background="@drawable/bg_radius_20"
        android:backgroundTint="@color/white">
        <ImageView
            android:id="@+id/ic_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:padding="12dp"
            android:src="@drawable/ic_close_ads" />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:strokeWidth="0dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">
            <ImageView
                android:id="@+id/imCache"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_8"
            android:layout_marginTop="16dp"
            android:backgroundTint="#0071C7"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_action"
                android:layout_width="wrap_content"
                app:tint="@color/white"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"/>
            <TextView
                android:id="@+id/tvAction"
                android:layout_width="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white"
                android:layout_marginVertical="12dp"
                android:layout_marginHorizontal="4dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="@string/continue_action"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_radius_8"
                android:backgroundTint="#F0F0F0"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_reset" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/reset"
                    android:textColor="#002D4C"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_radius_8"
                android:backgroundTint="#F0F0F0"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_trash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/delete"
                    android:textColor="#E53935"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>